{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PKL",
  "scopeName": "source.pkl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#module-header" },
    { "include": "#import" },
    { "include": "#class-definition" },
    { "include": "#typealias" },
    { "include": "#function" },
    { "include": "#property" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#types" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.pkl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.pkl",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.block.documentation.pkl",
          "begin": "///",
          "end": "$"
        }
      ]
    },
    "module-header": {
      "patterns": [
        {
          "match": "^\\s*(module|amends|extends)\\b",
          "captures": {
            "1": { "name": "keyword.other.module.pkl" }
          }
        },
        {
          "match": "^\\s*(open)\\s+(module)\\b",
          "captures": {
            "1": { "name": "storage.modifier.pkl" },
            "2": { "name": "keyword.other.module.pkl" }
          }
        }
      ]
    },
    "import": {
      "patterns": [
        {
          "match": "\\b(import|import\\*)\\s*",
          "captures": {
            "1": { "name": "keyword.control.import.pkl" }
          }
        },
        {
          "match": "\\b(as)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.control.as.pkl" },
            "2": { "name": "entity.name.namespace.pkl" }
          }
        }
      ]
    },
    "class-definition": {
      "patterns": [
        {
          "match": "\\b(abstract|open|local|external)?\\s*(class)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(?:\\s*(extends)\\s+([a-zA-Z_][a-zA-Z0-9_]*))?",
          "captures": {
            "1": { "name": "storage.modifier.pkl" },
            "2": { "name": "keyword.declaration.class.pkl" },
            "3": { "name": "entity.name.class.pkl" },
            "4": { "name": "keyword.other.extends.pkl" },
            "5": { "name": "entity.name.class.pkl" }
          }
        }
      ]
    },
    "typealias": {
      "match": "\\b(typealias)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*=",
      "captures": {
        "1": { "name": "keyword.declaration.typealias.pkl" },
        "2": { "name": "entity.name.type.pkl" }
      }
    },
    "function": {
      "match": "\\b(function)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "keyword.declaration.function.pkl" },
        "2": { "name": "entity.name.function.pkl" }
      }
    },
    "property": {
      "patterns": [
        {
          "match": "\\b(local|hidden|fixed|const|external)\\b",
          "name": "storage.modifier.pkl"
        },
        {
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?::\\s*([a-zA-Z_][a-zA-Z0-9_<>,\\s\\?\\|]*))?\\s*=",
          "captures": {
            "1": { "name": "variable.other.property.pkl" },
            "2": { "name": "entity.name.type.pkl" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.pkl",
          "match": "\\b(if|else|for|when|in|is|as|let)\\b"
        },
        {
          "name": "keyword.operator.new.pkl",
          "match": "\\b(new)\\b"
        },
        {
          "name": "keyword.other.pkl",
          "match": "\\b(throw|trace|read|read\\?)\\b"
        },
        {
          "name": "constant.language.pkl",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "variable.language.pkl",
          "match": "\\b(this|super|outer|module)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.pkl",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            { "include": "#string-interpolation" },
            { "include": "#string-escape" }
          ]
        },
        {
          "name": "string.quoted.double.pkl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-interpolation" },
            { "include": "#string-escape" }
          ]
        }
      ]
    },
    "string-interpolation": {
      "name": "meta.embedded.line.pkl",
      "contentName": "source.pkl",
      "begin": "\\\\\\(",
      "end": "\\)",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.template-expression.begin.pkl" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.template-expression.end.pkl" }
      },
      "patterns": [
        { "include": "#keywords" },
        { "include": "#numbers" },
        { "include": "#operators" },
        { "include": "#types" },
        { "include": "#identifiers" }
      ]
    },
    "string-escape": {
      "name": "constant.character.escape.pkl",
      "match": "\\\\[^(]"
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.pkl",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.pkl",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.pkl",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.pkl",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.integer.pkl",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.duration.pkl",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\s*(ns|us|ms|s|min|h|d)\\b"
        },
        {
          "name": "constant.numeric.datasize.pkl",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\s*(b|kb|kib|mb|mib|gb|gib|tb|tib|pb|pib)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.pkl",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.pkl",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.pkl",
          "match": "(\\+|-|\\*|/|%|\\*\\*|~/)"
        },
        {
          "name": "keyword.operator.nullcoalescing.pkl",
          "match": "(\\?\\?)"
        },
        {
          "name": "keyword.operator.pipe.pkl",
          "match": "(\\|>)"
        },
        {
          "name": "keyword.operator.spread.pkl",
          "match": "(\\.\\.\\.\\??)"
        },
        {
          "name": "keyword.operator.assignment.pkl",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.pkl",
          "match": "->"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.pkl",
          "match": ","
        },
        {
          "name": "punctuation.separator.colon.pkl",
          "match": ":"
        },
        {
          "name": "punctuation.terminator.semicolon.pkl",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.pkl",
          "match": "\\."
        },
        {
          "name": "punctuation.accessor.optional.pkl",
          "match": "\\?\\."
        },
        {
          "name": "punctuation.brackets.round.pkl",
          "match": "[\\(\\)]"
        },
        {
          "name": "punctuation.brackets.square.pkl",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.brackets.curly.pkl",
          "match": "[\\{\\}]"
        },
        {
          "name": "punctuation.brackets.angle.pkl",
          "match": "[<>]"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.builtin.pkl",
          "match": "\\b(String|Int|Float|Boolean|Duration|DataSize|List|Set|Map|Listing|Mapping|Dynamic|Any|Null|Pair|Regex|IntSeq|Class|TypeAlias|Module|Function|Mixin|Annotation)\\b"
        },
        {
          "name": "entity.name.type.pkl",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.pkl",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
